<!--Namespace da classe de Modelo para esta view-->
@model IEnumerable<PokemonMvc.Models.PokemonViewModel>
<!--Inclua os TempData para Sucesso e Erro aqui, conforme exemplo na view de Autenticação-->
@{
    ViewBag.Title = "Pokemons";
}<!--Título da página para o navegador-->


@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}

<h2>Lista de Pokemons</h2><!--Título da página-->
<table class="table">
    <tr><!--Títulos das colunas da tabela-->
        <th>#Pokedex</th>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Altura)</th>
        <th>@Html.DisplayNameFor(model => model.Peso)</th>
        <th>@Html.DisplayNameFor(model => model.Tipo)</th>
        <th></th>
    </tr>
    <!--Looping para escrever os dados na tabela-->
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Altura)</td>
            <td>@Html.DisplayFor(modelItem => item.Peso)</td>
            <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
        </tr>
    }
</table>
